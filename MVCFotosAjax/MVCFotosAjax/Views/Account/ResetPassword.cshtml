@model MVCFotosAjax.Models.LocalPassword

@{
    ViewBag.Title = "Cambiar Password";
}

<hgroup class="title">
    <h2>@ViewBag.Title</h2>
</hgroup>



<p>Usted esta logueado como:  <strong>@User.Identity.Name</strong>.</p>

