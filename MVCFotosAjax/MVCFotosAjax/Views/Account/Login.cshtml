                <span class="editor-label">
                    @Html.LabelFor(m => m.UserName)
                </span>
                <span class="editor-field">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "text-box" })
                </span>
            </div>*@

        @*<div>
                <span class="editor-label">
                    @Html.LabelFor(m => m.Password)
                </span>
                <span class="editor-field">
                        @Html.PasswordFor(m => m.Password, new { @class = "text-box" })
                </span>
            </div>*@

        
        <div class="form-group">
            @Html.LabelFor(m => m.RememberMe, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(m => m.RememberMe, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        @*<div class="editorfield">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Log in" class="btn btn-default" />
            </div>
