@model MVCFotos.Models.Comentario
@{
    Layout = null;
}
<h2>Agregar Comentario para @ViewBag.NFoto</h2>
@using (Html.BeginForm("_AgregarComentario", "Comentario",FormMethod.Post))
{
    @Html.HiddenFor(model => model.FotoId)
    <div class="form-horizontal">
        <div class="form-group">

            <div class="col-md-8">
                @Html.LabelFor(model => model.Autor, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Autor, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-8">
                @Html.LabelFor(model => model.Texto, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextAreaFor(model => model.Texto, new { @class = "form-control", rows = "3" })
                @*@Html.ValidationMessageFor(model => model.Texto, "", new { @class = "text-danger" })*@
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
            <div class="col-md-2">
                <a href="@Url.Action("Details", "Foto", new { IDFoto = Model.FotoId })">atras</a>
                @*<input type="button" value="Cancelar" class="btn btn-default" data-dismiss="modal"/>*@
                @*<button class="btn btn-danger" onclick="@Url.Action("Details", "Foto",new {IDFoto=Model.FotoId} )">Atras</button>*@
            </div>
        </div>
    </div>
}
