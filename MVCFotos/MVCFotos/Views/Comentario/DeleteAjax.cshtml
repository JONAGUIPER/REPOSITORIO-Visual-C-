@model MVCFotos.Models.Comentario

@{
    ViewBag.Title = "Delete";
}

<h2>Are you sure you want to delete this comment?</h2>

<h3>Photo Title: "@Html.DisplayFor(model => model.Autor)"</h3>        

<div class="photo-comment">

    <div class="photo-comment-from">
        From:
        @Html.DisplayFor(model => model.Autor)
    </div>

    <div class="photo-comment-subject">
        @Html.DisplayNameFor(model => model.FechaCreacion):
        @Html.DisplayFor(model => model.FechaCreacion)
    </div>

    <div class="photo-comment-body">
        @Html.DisplayFor(model => model.Texto)
    </div>

</div>

@using (Html.BeginForm(@*"DeleteConfirmed","Comentario",FormMethod.Post*@)) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to Photo", "Details", "Foto", new { id = ViewBag.PhotoID }, null)
    </p>
}

