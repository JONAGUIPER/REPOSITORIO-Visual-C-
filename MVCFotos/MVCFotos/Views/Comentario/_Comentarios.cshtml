@model IEnumerable<MVCFotos.Models.Comentario>
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-offset-2 col-md-8">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-3">
                    <div class="row">
                        <div class="col-md-12">
                            @Html.DisplayFor(model => item.Autor)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            @*@Html.DisplayNameFor(model=>item.FechaCreacion)*@
                            @Html.DisplayFor(model => item.FechaCreacion)
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => item.Texto)
                </div>
            </div>
            }
        </div>
    </div>
