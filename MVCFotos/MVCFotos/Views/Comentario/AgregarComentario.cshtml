@model MVCFotos.Models.Comentario
@{
    ViewBag.Title = "AgregarComentario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Agregar Comentario</h2>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model=>model.FotoId)
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model=>model.Autor)
            <div class="col-md-10">
                @Html.EditorFor(model=>model.Autor)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Texto)
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Texto)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

